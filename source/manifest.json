{
  "manifest_version": 2,

  "name": "ecoify Plugin",
  "description": "This extension will eco-ify your browsing behaviour.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js":      ["content.js"]
}],
  "permissions": [
   "activeTab",
   "webRequest",
   "*://*.google.com/",
   "*://*.google.de/"
   ],
   "content_security_policy": "script-src 'self' object-src 'self'"
}
